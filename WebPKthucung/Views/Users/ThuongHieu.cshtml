@{
    ViewBag.Title = "ThuongHieu";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<div class="thuongHieu_page" style="margin-left: 40px; min-height: 600px;">
    <h6 style="font-size: 24px; text-align: center;">Danh sách thương hiệu</h6>
    <div class="grid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="thuongHieu" style="margin: 10px;">

                    <a href="@Url.Action("SPTheothuonghieu",new { id = item.MATH })" >
                        <img src="@Url.Content("~/assest/img/thuong_hieu/" + item.LOGO)" alt="" style="width: 100%; height: 80px;">
                        <h6>
                            @item.TENTH
                        </h6>
                    </a>
                    
                </div>
            }
            </div>
    </div>
</div>

