@model IEnumerable<WebPKthucung.Models.CTDONDATHANG>
@{
    ViewBag.Title = "XacNhanDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("XacNhanDonDatHang", "DonHang", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "form-1", @class = "create_admin_form" }))
{
    <h2 style="font-size: 16px">Tên khách hàng: @ViewBag.ten </h2>
    <h2 style="font-size: 16px">Mã đơn hàng: @ViewBag.tenDongHang</h2>
    <h2 style="font-size: 16px">Chi tiết đơn đạt hàng:</h2>
    <table class="table_dsadmin">
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="height: 50px">
                    <td>
                        @Html.DisplayFor(modelItem => item.MASP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SANPHAM.TENSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SOLUONG)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DONGIA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.THANHTIEN)
                    </td>
                </tr>
            }


        </tbody>
    </table>
    <div class="button" style="margin-top:100px">
        <input type="submit" value="Xác nhân đơn hàng" class="button_add_admin" />
        <a href="@Url.Action("Index","DonHang")"><input type="button" value="Quay lại" class="button_add_admin" /></a>
    </div>
}