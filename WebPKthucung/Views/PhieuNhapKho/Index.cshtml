@using PagedList.Mvc;
@model PagedList.PagedList<WebPKthucung.Models.PHIEUNHAPKHO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table_header">
    <div class="search">
        <a href="@Url.Action("Search","Admin")">
            <i class="fa-solid fa-magnifying-glass"></i>
            <div class="search_title">
                Tìm kiếm nhanh
            </div>
        </a>
    </div>
    <div class="add_admin">
        <a href="@Url.Action("Create","PhieuNhapKho")">
            <i class="fa-solid fa-user-plus"></i>
            <div class="add_title">
                Thêm sản phẩm vào kho
            </div>
        </a>
    </div>
</div>
<table class="table_dsadmin">
    <thead>
        <tr>
            <th style="width: 65px;">Mã phiếu nhập</th>
            <th style="width: 65px;">Ngày nhập khẩu</th>
            <th style="width: 120px;">Mã sản phẩm</th>
            <th style="width: 120px;">Tên sản phẩm</th>
            <th style="width: 150px;">Số lượng nhập</th>
            <th style="width: 50px;">Chỉnh sửa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MAPHIEUNK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NGAYNK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MASP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SANPHAM.TENSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SOLUONG)
                </td>
                <td>
                    <a href="@Url.Action("Edit","PhieuNhapKho", new { id = item.MAPHIEUNK })"><i class="fa-solid fa-pen-to-square edit"></i></a>
                    <a href="@Url.Action("Delete","PhieuNhapKho", new { id = item.MAPHIEUNK })"> <i class="fa-solid fa-xmark remove"></i></a>
                    <a href="@Url.Action("Detail","PhieuNhapKho", new { id = item.MAPHIEUNK })"><i class="fa-solid fa-circle-info detail"></i></a>
                </td>
            </tr>
        }


    </tbody>
</table>
@*<div align="center">@Html.PagedListPager(Model, page => Url.Action("DSAdmin", new { page = page }))</div>*@

<ul class="page">
    @if (Model.PageCount > 1)
    {
        for (int i = 1; i <= Model.PageCount; i++)
        {
            <li>
                <a href="@Url.Action("Index", new { page = i })" class="@((i == Model.PageNumber) ? "page_button page_button_active" : "page_button")">@i</a>
            </li>
        }
    }
</ul>

